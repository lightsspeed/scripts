#!/bin/bash

##############################################
# DevOps Engineer EC2 Setup Script
# Ubuntu/Debian based systems
##############################################

set -e  # Exit on error

echo "=========================================="
echo "DevOps EC2 Setup Script"
echo "=========================================="

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

# Function to print colored output
print_status() {
    echo -e "${GREEN}[✓]${NC} $1"
}

print_error() {
    echo -e "${RED}[✗]${NC} $1"
}

print_warning() {
    echo -e "${YELLOW}[!]${NC} $1"
}

# Check if running as root
if [ "$EUID" -eq 0 ]; then 
    print_error "Please don't run as root. Run as regular user with sudo privileges."
    exit 1
fi

##############################################
# 1. System Update
##############################################
echo ""
echo "=========================================="
echo "1. Updating System Packages"
echo "=========================================="
sudo apt update && sudo apt upgrade -y
print_status "System updated"

##############################################
# 2. Essential Tools
##############################################
echo ""
echo "=========================================="
echo "2. Installing Essential Tools"
echo "=========================================="
sudo apt install -y \
    curl \
    wget \
    git \
    vim \
    nano \
    htop \
    tree \
    jq \
    unzip \
    software-properties-common \
    apt-transport-https \
    ca-certificates \
    gnupg \
    lsb-release \
    build-essential \
    net-tools \
    dnsutils \
    iputils-ping
print_status "Essential tools installed"

##############################################
# 3. Docker Installation
##############################################
echo ""
echo "=========================================="
echo "3. Installing Docker"
echo "=========================================="

# Remove old versions
sudo apt remove -y docker docker-engine docker.io containerd runc 2>/dev/null || true

# Add Docker's official GPG key
sudo install -m 0755 -d /etc/apt/keyrings
curl -fsSL https://download.docker.com/linux/ubuntu/gpg | sudo gpg --dearmor -o /etc/apt/keyrings/docker.gpg
sudo chmod a+r /etc/apt/keyrings/docker.gpg

# Set up repository
echo \
  "deb [arch=$(dpkg --print-architecture) signed-by=/etc/apt/keyrings/docker.gpg] https://download.docker.com/linux/ubuntu \
  $(lsb_release -cs) stable" | sudo tee /etc/apt/sources.list.d/docker.list > /dev/null

# Install Docker
sudo apt update
sudo apt install -y docker-ce docker-ce-cli containerd.io docker-buildx-plugin docker-compose-plugin

# Add current user to docker group
sudo usermod -aG docker $USER

print_status "Docker installed"
print_warning "You need to log out and back in for docker group membership to take effect"

##############################################
# 4. AWS CLI Installation
##############################################
echo ""
echo "=========================================="
echo "4. Installing AWS CLI v2"
echo "=========================================="
cd /tmp
curl "https://awscli.amazonaws.com/awscli-exe-linux-x86_64.zip" -o "awscliv2.zip"
unzip -q awscliv2.zip
sudo ./aws/install
rm -rf aws awscliv2.zip
print_status "AWS CLI installed"

##############################################
# 5. Terraform Installation
##############################################
echo ""
echo "=========================================="
echo "5. Installing Terraform"
echo "=========================================="
wget -O- https://apt.releases.hashicorp.com/gpg | sudo gpg --dearmor -o /usr/share/keyrings/hashicorp-archive-keyring.gpg
echo "deb [signed-by=/usr/share/keyrings/hashicorp-archive-keyring.gpg] https://apt.releases.hashicorp.com $(lsb_release -cs) main" | sudo tee /etc/apt/sources.list.d/hashicorp.list
sudo apt update
sudo apt install -y terraform
print_status "Terraform installed"

##############################################
# 6. Ansible Installation
##############################################
echo ""
echo "=========================================="
echo "6. Installing Ansible"
echo "=========================================="
sudo add-apt-repository -y ppa:ansible/ansible
sudo apt update
sudo apt install -y ansible
print_status "Ansible installed"

##############################################
# 7. Kubectl Installation
##############################################
echo ""
echo "=========================================="
echo "7. Installing Kubectl"
echo "=========================================="
curl -LO "https://dl.k8s.io/release/$(curl -L -s https://dl.k8s.io/release/stable.txt)/bin/linux/amd64/kubectl"
sudo install -o root -g root -m 0755 kubectl /usr/local/bin/kubectl
rm kubectl
print_status "Kubectl installed"

##############################################
# 8. Helm Installation
##############################################
echo ""
echo "=========================================="
echo "8. Installing Helm"
echo "=========================================="
curl https://raw.githubusercontent.com/helm/helm/main/scripts/get-helm-3 | bash
print_status "Helm installed"

##############################################
# 9. Jenkins (Optional - Commented out)
##############################################
echo ""
echo "=========================================="
echo "9. Jenkins Installation (Skipped)"
echo "=========================================="
print_warning "Jenkins installation is commented out. Uncomment if needed."

# Uncomment below to install Jenkins
: <<'JENKINS_INSTALL'
sudo wget -O /usr/share/keyrings/jenkins-keyring.asc \
  https://pkg.jenkins.io/debian-stable/jenkins.io-2023.key
echo "deb [signed-by=/usr/share/keyrings/jenkins-keyring.asc]" \
  https://pkg.jenkins.io/debian-stable binary/ | sudo tee \
  /etc/apt/sources.list.d/jenkins.list > /dev/null
sudo apt update
sudo apt install -y jenkins
sudo systemctl enable jenkins
sudo systemctl start jenkins
print_status "Jenkins installed and started on port 8080"
JENKINS_INSTALL

##############################################
# 10. Python3 and pip
##############################################
echo ""
echo "=========================================="
echo "10. Setting up Python3 and pip"
echo "=========================================="
sudo apt install -y python3 python3-pip python3-venv
print_status "Python3 and pip installed"

##############################################
# 11. Node.js and npm
##############################################
echo ""
echo "=========================================="
echo "11. Installing Node.js and npm"
echo "=========================================="
curl -fsSL https://deb.nodesource.com/setup_lts.x | sudo -E bash -
sudo apt install -y nodejs
print_status "Node.js and npm installed"

##############################################
# 12. Prometheus & Grafana (Optional)
##############################################
echo ""
echo "=========================================="
echo "12. Monitoring Tools (Skipped)"
echo "=========================================="
print_warning "Prometheus/Grafana installation skipped. Use Docker or K8s to deploy."

##############################################
# 13. Git Configuration
##############################################
echo ""
echo "=========================================="
echo "13. Git Configuration"
echo "=========================================="
read -p "Enter your Git username: " git_username
read -p "Enter your Git email: " git_email

if [ -n "$git_username" ] && [ -n "$git_email" ]; then
    git config --global user.name "$git_username"
    git config --global user.email "$git_email"
    git config --global init.defaultBranch main
    print_status "Git configured"
else
    print_warning "Git configuration skipped"
fi

##############################################
# 14. Shell Improvements (Optional)
##############################################
echo ""
echo "=========================================="
echo "14. Shell Improvements"
echo "=========================================="

# Add useful aliases
cat >> ~/.bashrc << 'EOF'

# DevOps Aliases
alias k='kubectl'
alias tf='terraform'
alias d='docker'
alias dc='docker compose'
alias ll='ls -alh'
alias ports='netstat -tulanp'

# Git Aliases
alias gs='git status'
alias ga='git add'
alias gc='git commit'
alias gp='git push'
alias gl='git log --oneline'

EOF

print_status "Bash aliases added"

##############################################
# 15. Create Workspace Directories
##############################################
echo ""
echo "=========================================="
echo "15. Creating Workspace Directories"
echo "=========================================="
mkdir -p ~/projects ~/scripts ~/terraform ~/ansible ~/kubernetes
print_status "Workspace directories created"

##############################################
# Summary
##############################################
echo ""
echo "=========================================="
echo "Installation Complete!"
echo "=========================================="
echo ""
echo "Installed tools:"
echo "  ✓ Docker & Docker Compose"
echo "  ✓ AWS CLI v2"
echo "  ✓ Terraform"
echo "  ✓ Ansible"
echo "  ✓ Kubectl"
echo "  ✓ Helm"
echo "  ✓ Python3 & pip"
echo "  ✓ Node.js & npm"
echo "  ✓ Git with configuration"
echo ""
echo "Workspace directories created:"
echo "  ~/projects"
echo "  ~/scripts"
echo "  ~/terraform"
echo "  ~/ansible"
echo "  ~/kubernetes"
echo ""
echo "=========================================="
echo "Next Steps:"
echo "=========================================="
echo "1. Log out and back in for Docker group to take effect"
echo "2. Run: source ~/.bashrc (to load new aliases)"
echo "3. Configure AWS CLI: aws configure"
echo "4. Test installations:"
echo "   - docker --version"
echo "   - terraform --version"
echo "   - ansible --version"
echo "   - kubectl version --client"
echo "   - helm version"
echo ""
print_status "Setup script completed successfully!"
